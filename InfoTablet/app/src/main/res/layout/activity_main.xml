<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:gauge="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:id="@+id/activity_main"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="800dp"
        android:orientation="vertical">
        <de.nitri.gauge.Gauge
            android:id="@+id/myGauge"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            gauge:initialValue="0"
            gauge:maxValue="240"
            gauge:minValue="0"
            gauge:totalNicks="180"
            gauge:valuePerNick="2"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/btnUp"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:src="@drawable/orangeup"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:text="up"
                android:textSize="50dp" />
            <ImageButton
                android:id="@+id/btnDown"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:src="@drawable/orangedown"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:textSize="50dp"
                android:text="down"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="차간 거리"
            android:gravity="center"
            android:textSize="30sp"
            />
        <TextView
            android:id="@+id/distance"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="60sp"
            />

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="240dp"
            android:layout_height="80dp"
            android:background="#FFF2C9"
            android:clickable="true"
            android:layout_gravity="center"
            android:focusable="true">
            <!--<ImageView
                android:id="@+id/img"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:outlineSpotShadowColor="@color/colorPrimary"
                android:src="@android:drawable/ic_menu_share" />
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@android:color/black"
                android:text="누적 거리 측정"
                android:textStyle="bold"/>-->
            <Button
                android:id="@+id/distanceShare"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:background="#FFF2C9"
                android:text="누적 거리 측정"/>
        </LinearLayout>

        <ToggleButton
            android:id="@+id/power"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"

            android:background="@drawable/switchon"
            android:scaleType="centerCrop"
            android:textOff=""
            android:textOn="" />
   </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginRight="10dp"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5">
            <LinearLayout
                android:id="@+id/loading"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible"
                android:gravity="center"
                android:orientation="vertical">
                <ProgressBar
                    android:id="@+id/progressBar"
                    style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:visibility="visible" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/mapViewTotal"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/fabCancel"
                        android:layout_gravity="bottom|right"
                        android:visibility="invisible"
                        android:src="@drawable/msgclose"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="250dp"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:scaleType="matrix"
                        app:backgroundTint="@android:color/transparent"
                        app:borderWidth="0dp"
                        android:clickable="true"/>
                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/fabMsg"
                        android:layout_gravity="bottom|right"
                        android:src="@drawable/msg"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="130dp"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        app:useCompatPadding="true"
                        android:scaleType="fitStart"
                        app:backgroundTint="@android:color/transparent"
                        app:borderWidth="0dp"
                        android:clickable="true"/>
                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/fabNavi"
                        android:layout_gravity="bottom|right"
                        android:src="@drawable/gps"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        app:useCompatPadding="true"
                        android:scaleType="fitCenter"
                        app:backgroundTint="@android:color/transparent"
                        app:borderWidth="0dp"
                        android:clickable="true"/>

                    <LinearLayout
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:id="@+id/layoutMapView"
                        android:orientation="vertical"
                        android:gravity="end|bottom"
                        android:background="@android:color/white">
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/naviSearchView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="invisible"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/destiName"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:hint="목적지를 입력해주세요"
                        android:layout_gravity="center|left"
                        android:textSize="30sp"/>
                    <Button
                        android:id="@+id/btnDesti"
                        android:layout_width="200dp"
                        android:layout_height="100dp"
                        android:text="검색"
                        android:layout_gravity="center"
                        android:textSize="50sp" />
                    <Button
                        android:id="@+id/btnMic"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:text="마이크(이미지)"
                        android:layout_gravity="center"
                        android:textSize="20sp" />
                </LinearLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ListView
                        android:id="@+id/destiList"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="left|top"/>
                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/btnBack"
                        android:layout_gravity="bottom|right"
                        android:src="@drawable/back"
                        android:background="#00232323"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        app:useCompatPadding="true"
                        android:scaleType="centerCrop"
                        gauge:borderWidth="0dp"
                        android:backgroundTint="@android:color/transparent"
                        android:clickable="true"/>
                </FrameLayout>
            </LinearLayout>
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn30"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="30"
                android:textSize="50dp" />
            <Button
                android:id="@+id/btn60"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="60"
                android:textSize="50dp" />
            <Button
                android:id="@+id/btn90"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="90"
                android:textSize="50dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>